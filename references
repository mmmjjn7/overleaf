创建一个关于references.bib的文献器，这里存储你需要的文献。。。一般来说，只要是google学术上都有引用，然后选取bitx模式，直接复制粘贴就可以了。


references.bib
@article{maori2009iapv,
  title={IAPV, a bee-affecting virus associated with Colony Collapse Disorder can be silenced by dsRNA ingestion},
  author={Maori, Eyal and Paldi, Nitzan and Shafir, Sharoni and Kalev, Haim and Tsur, Erez and Glick, Eitan and Sela, Illan},
  journal={Insect molecular biology},
  volume={18},
  number={1},
  pages={55--60},
  year={2009},
  publisher={Wiley Online Library}
}

@Misc{a,
  title={Paralysing virus a suspect in disappearing bee mystery},
  author={Roxanne Khamsi},
  url={https://www.newscientist.com/article/dn12605-paralysing-virus-a-suspect-in-disappearing-bee-mystery/},
  year={2007},
  publisher={New Scientist}
}
@Misc{d,
  title={The importance of being ethical in project management},
  author={Moira Alexander},
  url={https://www.techrepublic.com/article/the-importance-of-being-ethical-in-project-management/},
  year={2017},
  publisher={TechRepublic}
}
@article{ghasemi2009ethical,
  title={Ethical considerations in animal studies},
  author={Ghasemi, Mehdi and Dehpour, Ahmad Reza},
  journal={Journal of medical ethics and history of medicine},
  volume={2},
  year={2009},
  publisher={Tehran University of Medical Sciences}
}


